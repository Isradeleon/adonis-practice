{% extends 'layouts.menu' %}
{% block title %}
  HOME
{% endblock %}

{% block content %}
<h1 class="text-center text-primary">AdonisJS Stereofy</h1>
<hr>
<div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-12">
      {% if artists.length > 0 %}
        <h3>Check out our artists!</h3>
        {% for artist in artists %}
          <div style="padding:10px;" class="hidden-xs hidden-sm col-md-4">
            <a class="thumbnail" href="/artist/{{artist._id}}">
              <div style="height:200px; background-image:url({{artist.image}}); background-size:cover; background-position:center center;">
              </div>

              <h5 class="text-center text-info">{{artist.name}}</h5>
            </a>
          </div>

          <div style="padding:10px;" class="col-xs-12 hidden-md hidden-lg hidden-xl">
            <a class="thumbnail" href="/artist/{{artist._id}}">
              <img class="img-responsive" src="{{artist.image}}" alt="{{artist.name}}" />

              <h5 class="text-center text-info">{{artist.name}}</h5>
            </a>
          </div>
        {% endfor %}
      {% else %}
        <h4 class="text-center"><em>There are no artists to show!</em></h4>
      {% endif %}
    </div>
</div>
{% endblock %}
